{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.user_edit'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <figure class="col-md-3">
        <img src="{{ asset('uploads/photos/' ~ photo.source) }}" alt="{{ photo.source }}">
    </figure>
    <p>{{ 'sure'|trans }}</p>
{% include 'default/_form.html.twig' with {
    page_title: 'title.photo_delete',
    page_title_param: {'%id%': photo.id},
    attr: {
        method: 'DELETE',
        action: url('photo_delete', {'id': photo.id}),
    },
    back_to_list_path: 'photo_index',
} %}

{% endblock %}