{% extends 'base.html.twig' %}

{% block title %}
    {{ 'photo_edit'|trans({'%id%': photo.id|default('')}) }}
{% endblock %}

{% block body %}
    <article class="container flex-container">
    <figure class="col-md-3">
        <img src="{{ asset('uploads/photos/' ~ photo.file.source) }}" alt="{{ photo.file.source }}">
    </figure>
{% include 'default/_form.html.twig' with {
    page_title: 'photo_edit',
    page_title_param: {'%id%': photo.id},
    attr: {
        method: 'PUT',
        action: url('photo_edit', {'id': photo.id}),
    },
} %}
    </article>
{% endblock %}