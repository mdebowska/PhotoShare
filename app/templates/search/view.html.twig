{% extends 'base.html.twig' %}

{% block title %}
    PhotoShare - Search
{% endblock %}

{% block body %}
    {% block content %}
        <main>
            {% if photos is defined and photos|length %}
            <article>
                <header>
                    <h2 class="text-center">
                        {{ 'label.photos'|trans }}
                    </h2>
                </header>
                <div class="flex-container">
                {% for photo in photos %}

                    <div class="photo">
                        <a href="{{ url('photo_view', {'id':photo.id}) }}">
                            <img src="{{ asset('uploads/photos/' ~ photo.file.source) }}" alt="{{ photo.file.source }}">
                        </a>
                    </div>
                {% endfor %}
                </div>
            </article>
            {% endif %}
            {% if users is defined and users|length %}
            <article class="container">
                <header>
                    <h2 class="text-center">
                        {{ 'label.users'|trans }}
                    </h2>
                </header>
                <div class="flex-container flex-justify-start">
                {% for user in users %}
                    <a class="btn btn-default" href="{{ url('user_view', {'id':user.id}) }}">
                        {{ user.login }}
                    </a>
                {% endfor %}
                </div>
            </article>
            {% endif %}
        </main>
    {% endblock %}
{% endblock %}